

<form class="form-horizontal form-group-sm">

    <div class="form-group">
        <div id="locationId" class="col-sm-offset-3 col-sm-7">
            {{g-autocomplete
                class="form-control"
                on-select=(action 'locationUpdated')
                options=model.startSearchArea
            }}
        </div>
    </div>
    <p>
    </p>


    <div class="form-group">
        <label for="line1Id" class="control-label col-sm-3">Address line 1</label>
        <div class="col-sm-5">
            {{input id="line1Id" class="form-control" value=model.address.line1}}
            <!-- <input id="line1Id" class="form-control" placeholder="{{addressLine1}}"/> -->
        </div>
    </div>

    <div class="form-group">
        <label for="line2Id" class="control-label col-sm-3">Address line 2</label>
        <div class="col-sm-5">
            {{input id="line2Id" class="form-control" value=model.address.line2}}
        </div>
    </div>

    <div class="form-group">
        <label for="cityId" class="control-label col-sm-3">City</label>
        <div class="col-sm-5">
            {{input id="cityId" class="form-control" value=model.address.city}}
        </div>
    </div>

    <div class="form-group">
        <label for="provinceId" class="control-label col-sm-3">Province</label>
        <div class="col-sm-1">
            {{input id="provinceId" class="form-control" value=model.address.province}}
        </div>
    </div>

    <div class="form-group">
        <label for="postalCodeId" class="control-label col-sm-3">Postal Code</label>
        <div class="col-sm-2">
            {{input id="postalCodeId" class="form-control" value=model.address.postalCode}}
        </div>
    </div>

</form>

{{g-maps name="my-map" markers=markers lat=model.mapCenter.lat lng=model.mapCenter.lng zoom=model.mapCenter.zoom}}
